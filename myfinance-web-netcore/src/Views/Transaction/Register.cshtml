@model myfinance_web_netcore.Models.TransactionModel
@{
    ViewData["Title"] = "Transações";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="Transaction" asp-action="Register" method="post">

    <div class="container">
        @Html.HiddenFor(m => m.Id)

        <div class="mb-3">
            @Html.LabelFor(m => m.DateTransaction)
            <input type="date" id="txtData" class="form-control" asp-for="DateTransaction"/>
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Value)
            <input type="text" id="txtValue" class="form-control" asp-for="Value" step="0.01">
        </div>

        <div class="mb-3">
            <label class="form-label">Plano de Conta</label>
            @Html.DropDownListFor(m => m.AccountPlanId, Model.AccountPlans, new { @class="form-select"})
        </div>

        <div class="mb-3">
            <label class="form-label">Histórico</label>
            <input type="text" id="txtHistory" class="form-control" asp-for="History">
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary btn-lg">
                Registrar
            </button>
            <button type="button" class="btn btn-secondary btn-lg" onclick="Voltar()">
                Cancelar
            </button>
        </div>
    </div>
</form>

<script>
    function Voltar() {
        window.location.href = "/Transaction/Index"
    }
</script>