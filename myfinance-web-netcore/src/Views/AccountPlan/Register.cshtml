@model myfinance_web_netcore.Models.AccountPlanModel
@{
    ViewData["Title"] = "Plano de Contas";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="AccountPlan" asp-action="Register" method="post">   

    @Html.HiddenFor(m => m.Id)

    <div class="form-group col-md-6">
        @Html.LabelFor(m => m.Description)
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        @Html.RadioButtonFor(model => model.Type, "D", false)
        @Html.Label("Despesa")
    </div>

    <div class="form-group">
        @Html.RadioButtonFor(model => model.Type, "R", false)
        @Html.Label("Receita")
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary btn-lg">
            Registrar
        </button>
        <button type="button" class="btn btn-secondary btn-lg" onclick="Voltar()">
            Cancelar
        </button>
    </div>
</form>

<script>
    function Voltar() {
        window.location.href = "/AccountPlan/Index"
    }
</script>