@{
    ViewData["Title"] = "Plano de Contas";
}

<h1>@ViewData["Title"]</h1>

<button type="button" class="btn btn-primary btn-lg" onclick="Register()">Criar item de Plano de Conta</button>
<hr />
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Descrição</th>
            <th scope="col">Type</th>
            <th scope="col">#</th>
            <th scope="col">#</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in (List<AccountPlanModel>)ViewBag.ListAccountPlan)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Description</td>
                    <td>@item.Type</td>
                    <td>
                        <button type="button" class="btn btn-outline-warning" onclick="Edit(@item.Id)">
                            Editar
                        </button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-outline-danger" onclick="Delete(@item.Id)">
                            Excluir
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<script>
    function Register() {
        window.location.href = "/AccountPlan/Register"
    }

    function Edit(id) {
        window.location.href = "/AccountPlan/Register/" + id
    }

    function Delete(id) {
        window.location.href = "/AccountPlan/Delete/" + id
    }
</script>